#!/usr/bin/env zsh

function spacemacs() {
	case $1 in
		"start") start
				 ;;
		"restart") finish && start
				   ;;
		"kill") finish
				;;
		"*" ) echo "wrong argument"
			  ;;
	esac
}

function start() {
	emacs --with-profile spacemacs &
}

function finish() {
	pgrep -f 'Emacs --with-profile spacemacs'  | xargs kill -9
}


spacemacs $1
