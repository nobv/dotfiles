#!/usr/bin/env zsh

CMD=$HOME/.config/doom-emacs/bin/doom

function doom() {
    case $1 in
        "start") start
                 ;;
        "restart") finish && start
                   ;;
        "kill") finish
                ;;
        "refresh") refresh
                   ;;
        "up") upgrade
              ;;
        "install") install
                   ;;
        "doctor") doctor
                  ;;
        "sync") sync
                ;;
        "*" ) echo "wrong argument"
              ;;
    esac
}

function install() {
    $CMD install
}

function upgrade() {
    $CMD up
}

function refresh() {
    $CMD sync && finish && start
}

function start() {
    emacs --with-profile doom &
}

function finish() {
    pgrep -f 'Emacs --with-profile doom' | xargs kill -9
}

function sync() {
    $CMD sync
}

function doctor() {
    $CMD doctor
}

doom $1

