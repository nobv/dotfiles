#!/usr/bin/env zsh

CMD=$HOME/.emacs.d/doom-emacs/bin/doom

function doom() {
	case $1 in
		"start") start
				 ;;
		"restart") finish && start
				   ;;
		"kill") finish
				;;
		"refresh") refresh
				   ;;
		"up") upgrade
			  ;;
		"install") install
				   ;;
		"*" ) echo "wrong argument"
			  ;;
	esac
}

function install() {
	$CMD install
}

function upgrade() {
	$CMD up
}

function refresh() {
	$CMD sync && finish && start
}

function start() {
	emacs --with-profile doom &
}

function finish() {
	pgrep -f 'Emacs --with-profile doom' | xargs kill -9
}


doom $1

